<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="safetyLab.SearchPage">
    <ContentPage.Content>
        <StackLayout>


            <Label 
                Text="Chemical Name"
                TextColor="Black"
                VerticalOptions="Center"
                HorizontalOptions="Center"
            />
            <Entry
                VerticalOptions="Center"
                Placeholder="Enter Chemical Name..."
            />
            <Label 
                Text="ID Search"
                TextColor="Black"
                VerticalOptions="Center"
                HorizontalOptions="Center"
            />
            <Entry
                VerticalOptions="Center"
                Placeholder="Enter ID..."
            />
            
            <Button
                Text="Search"
                TextColor="Black"
                BorderColor="Black"
                BorderWidth="2"
                BackgroundColor="White"
                VerticalOptions="End"
                HorizontalOptions="Center"
                Clicked="Search"
            />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>