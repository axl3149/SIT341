<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="safetyLab.StartPage"
            >

    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal">
            <Button Text="Scan" 
                    FontSize="15"
                    TextColor="White"
                    HorizontalOptions="Start" 
                    VerticalOptions="Center" 
                    Clicked="Scan"> </Button>
            <SearchBar 
            HorizontalOptions="End" 
            WidthRequest="290"
            VerticalOptions="Center" 
            SearchButtonPressed="Search"
            Placeholder="Search ID..."
            TextChanged="SearchBarValue"
            Keyboard="Numeric"/>
        </StackLayout>
    </NavigationPage.TitleView>
    
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ScrollView Grid.Row="0" Grid.Column="0"></ScrollView>
            <Button Text="Search" 
                    Grid.Row="0" 
                   
                    Margin="10,10,0,0"
                    Grid.Column="0" 
                   ImageSource="search_icon"
                    FontSize="Large"
                    WidthRequest="200"
                    HeightRequest="300"
                    TextColor="White"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="Center" 
                    BackgroundColor="#788695"
                    Clicked="SearchButton"/>
            
            <Button Text="Recents"
                     FontSize="Large"
                    ImageSource="recents"
                    Grid.Row="0" 
                     Margin="0,10,10,0"
                    TextColor="White"
                    Grid.Column="1" 
                    WidthRequest="200"
                    HeightRequest="300"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="Center" 
                    BackgroundColor="#A0C6A7"
                    Clicked="RecentsButton"/>
            
            <Button Text="Favourites" 
                     FontSize="Large"
                    Image="star"
                    Margin="10,0,0,10"
                    Grid.Row="1"
                    Grid.Column="0" 
                    TextColor="White"
                    WidthRequest="200"
                    HeightRequest="300"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="Center"
                    BackgroundColor="#A0C2C6"
                    Clicked="FavouritesButton"/>
            
            <Button Text="Contact" 
                    Grid.Row="1"
                     FontSize="Large"
                   ImageSource="phone_icon"
                 Margin="0,0,10,10"
                    Grid.Column="1" 
                    WidthRequest="200"
                    TextColor="White"
                    HeightRequest="300"
                    BackgroundColor="#A0A9C6"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="Center" 
                    Clicked="ContactsButton"/>
        </Grid>
    </ContentPage.Content>

</ContentPage>