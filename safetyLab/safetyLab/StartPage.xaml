<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="safetyLab.StartPage"
             Title="SafetyLab">

    <NavigationPage.TitleView>
        <Label Text="SafetyLab" TextColor="White" HorizontalOptions="CenterAndExpand" FontSize="Title"></Label>
    </NavigationPage.TitleView>
    
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ScrollView Grid.Row="0" Grid.Column="0"></ScrollView>
            <Button Text="Search" 
                    Grid.Row="0" 
                   
                    Margin="10,10,0,0"
                    Grid.Column="0" 
                   ImageSource="search_icon"
                    FontSize="Large"
                    WidthRequest="200"
                    HeightRequest="300"
                    TextColor="White"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="Center" 
                    BackgroundColor="#7FB3D5"
                    Clicked="SearchButton"/>
            
            <Button Text="Scan"
                     FontSize="Large"
                    ImageSource="qr_icon"
                    Grid.Row="0" 
                     Margin="0,10,10,0"
                    TextColor="White"
                    Grid.Column="1" 
                    WidthRequest="200"
                    HeightRequest="300"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="Center" 
                    BackgroundColor="#5DADE2"
                    Clicked="Scan"/>

            <Button Text="Recents" 
                    FontSize="Large"
                    Image="recents"
                    Margin="10,0,0,10"
                    Grid.Row="1"
                    Grid.Column="0" 
                    TextColor="White"
                    WidthRequest="200"
                    HeightRequest="300"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="Center"
                    BackgroundColor="#79c3f7"
                    Clicked="RecentsButton"/>
            
            <Button Text="Contacts" 
                    Grid.Row="1"
                    FontSize="Large"
                    ImageSource="phone_icon"
                    Margin="0,0,10,10"
                    Grid.Column="1" 
                    WidthRequest="200"
                    TextColor="White"
                    HeightRequest="300"
                    BackgroundColor="#85C1E9"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="Center" 
                    Clicked="ContactsButton"/>
        </Grid>
    </ContentPage.Content>

</ContentPage>