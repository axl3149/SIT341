<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="safetyLab.StartPage"
            >
    <!--<ContentPage.ToolbarItems>
        <ToolbarItem Name="Scan" Text="Scan" Clicked="Scan" Priority="0"></ToolbarItem>
        <ToolbarItem Name="Search" Text="Search" Clicked="Search" Priority="1"></ToolbarItem>
    </ContentPage.ToolbarItems>-->

    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal">
            <Button Text="Scan" 
                    FontSize="15"
                    TextColor="White"
                    HorizontalOptions="Start" 
                    VerticalOptions="Center" 
                    Clicked="Scan"> </Button>
            <SearchBar 
            HorizontalOptions="End" 
            WidthRequest="290"
            VerticalOptions="Center" 
            SearchButtonPressed="Search"
            Placeholder="Search ID..."
            TextChanged="SearchBarValue"
            Keyboard="Numeric"/>
        </StackLayout>
    </NavigationPage.TitleView>
    
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Text="Search Part" Grid.Row="0" Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Start"></Label>
            <ScrollView Grid.Row="0" Grid.Column="0"></ScrollView>
            <Button Text="search_icon" Grid.Row="0" Grid.Column="0" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" Clicked="SearchButton"/>
            <Button Text="recents_icon" Grid.Row="0" Grid.Column="1" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" Clicked="RecentsButton"/>
            <Button Text="favourites_icon" Grid.Row="1" Grid.Column="0" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" Clicked="FavouritesButton"/>
            <Button Text="phone_icon" Grid.Row="1" Grid.Column="1" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" Clicked="ContactsButton"/>
        </Grid>
    </ContentPage.Content>

</ContentPage>